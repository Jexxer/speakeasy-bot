generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vouch {
  id        Int      @id @default(autoincrement())
  userId    String
  vouchedBy String
  createdAt DateTime @default(now())
}

model Sponsor {
  id          Int      @id @default(autoincrement())
  userId      String // ID of user being sponsored
  sponsoredBy String // ID of the sponsor
  createdAt   DateTime @default(now())
}
